<div class="container pt-3">

  <!-- Row 1: Today's Trips -->
  <div class="row shadow mb-4 py-3">
    <div class="col-12 d-flex justify-content-between align-items-center mb-3">
      <h1 class="mb-0">Clients</h1>
      <input type="button" value="Add Client" class="btn btn-outline-primary" id="add_trip_btn" data-bs-toggle="modal" data-bs-target="#TripModel">
    </div>

    <div class="col-12 table-responsive">
      <table class="table table-borderless table-hover">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Contact</th>
            <th scope="col">Email</th>
            <th scope="col">Documents</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Mark</td>
            <td>Otto</td>
            <td>@mdo</td>
            <td><input type="checkbox" name="newsletter" value="yes" checked= true ></td>
            <td>
              <a href="#" class="me-2">Edit</a>
              <a href="#">Delete</a>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

</div>
<div class="modal fade" id="TripModel" tabindex="-1" aria-labelledby="TripModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

      <div class="modal-header">
        <h1 class="modal-title fs-5" id="TripModalLabel">New Client</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <%= form_with url: admin_add_driver_path, id: "trip_form", method: :post do |form| %>
        <div class="modal-body">
          <%= form.hidden_field :trip_id, id: "trip_id", value: "" %>


          <div class="mb-3">
            <%= form.label :name, "Name" %>
            <%= form.number_field :name, class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= form.label :contact, "Contact" %>
            <%= form.text_field :contact, class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= form.label :email, "Email" %>
            <%= form.number_field :email, class: "form-control",required: true %>
          </div>

          <div class="mb-3">
            <%= form.label :license, "Documents" %>
            <%= form.file_field :license, class: "form-control", accept: "image/png, image/jpeg application/pdf" %>

          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <%= form.submit "Save Trip", class: "btn btn-primary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>


