<div class="container text-center">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <div class="card bg-secondary">
        <div class="card-body">
          <div>
            <%= image_tag "transportation_logo.jpg", class: "img-fluid" %>
          </div>
          <%= form_with url: "/user_login", class: "text-start" do |form| %>
            <div class="mb-3">
              <%= form.label :email, "User Name", class: "form-label fw-bold" %>
              <%= form.text_field :email, class: "form-control", required: true%>
            </div>
            
            <div class="mb-3">
              <%= form.label :password, "Password", class: "form-label fw-bold" %>
              <%= form.password_field :password, class: "form-control", required: true %>
            </div>
            
            <div class="mb-3 d-grid">
              <%= form.submit "Login", class: "btn btn-secondary" %>
            </div>
            <row style="display: flex; justify-content: space-between;">
              <div class="mb-3"> 
                Forgot password ?
              </div>
              <div class="mb-3">
                Signup
              </div>
          </row>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
